{
  "name": "workerman/webman",
  "type": "project",
  "keywords": [
    "high performance",
    "http service"
  ],
  "homepage": "https://www.workerman.net",
  "license": "MIT",
  "description": "High performance HTTP Service Framework.",
  "authors": [
    {
      "name": "walkor",
      "email": "walkor@workerman.net",
      "homepage": "https://www.workerman.net",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "walkor@workerman.net",
    "issues": "https://github.com/walkor/webman/issues",
    "forum": "https://wenda.workerman.net/",
    "wiki": "https://workerman.net/doc/webman",
    "source": "https://github.com/walkor/webman"
  },
  "require": {
    "php": ">=8.3",
    "workerman/webman-framework": "^1.5.0",
    "monolog/monolog": "^2.0",
    "vlucas/phpdotenv": "^5.6",
    "workerman/redis-queue": "^1.2",
    "psr/container": "^1.1.1",
    "php-di/php-di": "^6",
    "doctrine/annotations": "^1.14",
    "topthink/think-validate": "^2.0",
    "illuminate/database": "^11.9",
    "illuminate/events": "^11.9",
    "workerman/crontab": "^1.0",
    "ext-pdo": "*",
    "illuminate/redis": "^11.13",
    "firebase/php-jwt": "^6.10",
    "webman/console": "^1.3",
    "ext-rdkafka": "^6.0",
    "guzzlehttp/guzzle": "^7.9"
  },
  "suggest": {
    "ext-event": "For better performance. "
  },
  "autoload": {
    "psr-4": {
      "": "./",
      "app\\": "./app",
      "App\\": "./app",
      "app\\View\\Components\\": "./app/view/components"
    },
    "files": [
      "./support/helpers.php"
    ]
  },
  "scripts": {
    "post-package-install": [
      "support\\Plugin::install"
    ],
    "post-package-update": [
      "support\\Plugin::install"
    ],
    "pre-package-uninstall": [
      "support\\Plugin::uninstall"
    ],
    "tests": "vendor/bin/phpunit",
    "tests-coverage": "vendor/bin/phpunit --coverage-html coverage-report",
    "phpstan": "vendor/bin/phpstan analyse -l 5 app tests",
    "phpcs": "./vendor/bin/phpcs -n --colors",
    "phpcbf": "./vendor/bin/phpcbf",
    "phinx-migrate-up": "./vendor/bin/phinx migrate",
    "phinx-seed-up": "./vendor/bin/phinx seed:run -s MainSeeder" 
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.11",
    "php-mock/php-mock": "^2.5",
    "php-mock/php-mock-phpunit": "^2.10",
    "squizlabs/php_codesniffer": "^3.10",
    "robmorgan/phinx": "^0.16.0",
    "kwn/php-rdkafka-stubs": "^2.2.1"
  }
}
